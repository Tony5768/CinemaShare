@model CinemaShare.Models.ViewModels.ProjectionIndexViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Projections</h1>
<ul class="list-inline text-dark">
    @foreach (var projectionCard in Model?.Projectitons)
    {
        <li style="padding-bottom: 20px;">
            <a asp-controller="Projections" asp-action="Detail" asp-route-id="@projectionCard.Id"
               class="content-heading clearfix media box-hover"
               style="text-decoration:none;margin: 0 auto;width: 30%;">
                <div style="margin-left: 30px;">
                    <h3 class="text-dark font-weight-bold">Name: @projectionCard.cinema.Name</h3>
                    <h5 class="text-dark ">Title: @projectionCard.film.FilmData.Title</h5>
                    <h5 class="text-dark ">Date: @projectionCard.Date</h5>
                    <h5 class="text-dark ">Projection type: @projectionCard.ProjectionType</h5>
                </div>
            </a>
        </li>
    }
</ul>

<nav>
    <ul class="pagination justify-content-center" style="padding-top:30px; margin-bottom:0px;">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route="filmsList" asp-route-id="@(this.Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (int i = 1; i <= this.Model.PagesCount; i++)
        {
            var active = i == this.Model.CurrentPage ? "active" : String.Empty;
            <li class="page-item @active">
                <a class="page-link"
                   asp-route="filmsList" asp-route-id="@i">@i</a>
            </li>
        }

        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route="filmsList" asp-route-id="@(this.Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>

