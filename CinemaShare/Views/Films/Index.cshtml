@model FilmsIndexViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Search options</h1>

<h1>Order options</h1>
<h4 class="media-heading"><a asp-controller="Films" asp-action="ByName" asp-route-id="">By name</a></h4>
<h4 class="media-heading"><a asp-controller="Films" asp-action="ByYear" asp-route-id="">By year</a></h4>
<h4 class="media-heading"><a asp-controller="Films" asp-action="ByRating" asp-route-id="">By rating</a></h4>



<h1>Films</h1>
<ul>
    @foreach (var film in Model?.Films)
    {
        <li>
            <a href="/films/@film.Id">
                <h1>Title</h1>
                <h1></h1>
            </a>
        </li>
    }
</ul>


<nav>
    <ul class="pagination justify-content-center">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route="route"
                   asp-route-name="routeName"
                   asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (int i = 1; i <= this.Model.PagesCount; i++)
        {
            var active = i == this.Model.CurrentPage ? "active" : string.Empty;
            <li class="page-item @active">
                <a class="page-link"
                   asp-route="route"
                   asp-route-name="routeName"
                   asp-route-page="@i">@i</a>
            </li>
        }

        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route="route"
                   asp-route-name="routeName"
                   asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>


<h1>Pages</h1>
