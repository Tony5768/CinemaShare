@model CinemaShare.Models.InputModels.CinemaInputModel
@{
    ViewData["Title"] = "Add cinema";
}

<h1 class="text-center">Add Cinema</h1>

<div class="row1">
    <div class="col-md-4">
        <form asp-controller="Cinemas" asp-action="Add" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Country"></label>
                <input asp-for="@Model.Country" class="form-control" />
                <span asp-validation-for="@Model.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.City"></label>
                <input asp-for="@Model.City" class="form-control" />
                <span asp-validation-for="@Model.City" class="text-danger"></span>
            </div>           
            <button type="submit" class="btn btn-primary">Add Cinema</button>
        </form>
    </div>
</div>


