@model CinemaShare.Models.HomePageViewModel

@{
    ViewData["Title"] = "Home Page";
}

<h1> Cinema Share</h1>
<h2>Add sth here</h2>

<div >
    <h4>Top rated films</h4>
    <div>
        <div id="topFilms" class="carousel slide" data-ride="carousel">
            <!-- <ol class="carousel-indicators">
         <li data-target="#topFilms" data-slide-to="0" class="active"></li>
         <li data-target="#topFilms" data-slide-to="1"></li>
         <li data-target="#topFilms" data-slide-to="2"></li>
     </ol>-->
            <div class="carousel-inner">

                @if (Model.TopFilms.Count > 0)
                {
                <div class="carousel-item active">
                    <img class="d-block w-100" src="@Model.TopFilms[0].Poster" alt="Film poster" />
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@Model.TopFilms[0].Title</h5>
                        <h5>Rating: @Model.TopFilms[0].Rating</h5>
                        <p>@Model.TopFilms[0].Genres</p>
                    </div>
                </div>
                }

                @foreach (var filmCard in Model.TopFilms.Skip(1))
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@filmCard.Poster" alt="Film poster">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@filmCard.Title</h5>
                            <h5>Rating: @filmCard.Rating</h5>
                            <p>@filmCard.Genres</p>
                        </div>
                    </div>
                }
                <a class="carousel-control-prev" href="#topFilms" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#topFilms" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>


<div>
    <h1>Newest Films</h1>
    <div>
        @foreach (var filmCard in Model.RecentFilms)
        {
        <div class="col-md-4">
            <img class="d-block w-100" src="@filmCard.Poster" alt="Film poster">
            <div class="carousel-caption d-none d-md-block">
                <h5>@filmCard.Title</h5>
                <h5>Rating: @filmCard.Rating</h5>
                <p>@filmCard.Genres</p>
            </div>
        </div>
        }
    </div>
</div>

<a href="/films">See all films</a>
