@model CinemaShare.Models.HomePageViewModel

@{
    ViewData["Title"] = "Home Page";
}

<h1> Cinema Share</h1>
<h2>Add sth here</h2>

<div >
    <h4>Top rated films</h4>
    <div class="text-dark">
        <div id="topFilms" class="carousel slide" data-ride="carousel">
            <!-- <ol class="carousel-indicators">
         <li data-target="#topFilms" data-slide-to="0" class="active"></li>
         <li data-target="#topFilms" data-slide-to="1"></li>
         <li data-target="#topFilms" data-slide-to="2"></li>
     </ol>-->
            <div class="carousel-inner">

                @if (Model.TopFilms.Count > 0)
                {
                <div class="carousel-item active">
                    <img class="d-flex h-25 mx-auto" src="@Model.TopFilms[0].Poster" alt="Film poster" />
                    <div class="carousel-caption d-none d-md-block">
                        <h5 class="text-dark font-weight-bold">@Model.TopFilms[0].Title</h5>
                        <h5 class="text-dark">Rating: @Model.TopFilms[0].Rating</h5>
                        <h3 class="text-dark">@Model.TopFilms[0].Genres</h3>
                    </div>
                </div>
                }

                @foreach (var filmCard in Model.TopFilms.Skip(1))
                {
                    <div class="carousel-item">
                        <img class="d-block h-25 mx-auto" src="@filmCard.Poster" alt="Film poster">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="text-dark font-weight-bold">@filmCard.Title</h5>
                            <h5 class="text-dark">Rating: @filmCard.Rating</h5>
                            <h3 class="text-dark">@filmCard.Genres</h3>
                        </div>
                    </div>
                }
                <a class="carousel-control-prev text-black-50" href="#topFilms" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only  text-dark">Previous</span>
                </a>
                <a class="carousel-control-next text-black-50" href="#topFilms" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only text-dark">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>


<div>
    <h1>Newest Films</h1>
    <ul class="list-inline text-dark" >
        @foreach (var filmCard in Model.RecentFilms)
        {
        <li class="col-md-4 list-inline-item">
            <!--class="d-block h-100"-->
            <img class="rounded mx-auto d-block h-25 w-25" src="@filmCard.Poster" alt="Film poster">
            <div class="carousel-caption d-none d-md-block">
                <h3 class="text-dark font-weight-bold">@filmCard.Title</h3>
                <h3 class="text-danger" >Rating: @filmCard.Rating</h3>
                <h5 class="text-danger">@filmCard.Genres</h5>
            </div>
        </li>
        }
    </ul>
</div>

<a href="/films">See all films</a>
