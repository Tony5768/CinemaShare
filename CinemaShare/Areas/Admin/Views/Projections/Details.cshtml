@model Data.Models.FilmProjection

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Film projection</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cinema)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cinema.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Film)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Film.FilmData.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectionType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectionType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalTickets)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalTickets)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="Edit" asp-route-id="@Model.Id" method="get" class="my-4">
        <input type="submit" value="Edit" class="btn btn-success" />
    </form>
    <form asp-action="Delete" class="my-4">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete the projection?');" />
    </form>
    <br />
    <a asp-action="Index">Back to List</a>
</div>
