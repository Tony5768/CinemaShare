            <div class="form-group">
                <label asp-for="TicketPrices.ChildrenPrice" class="control-label"></label>
                <input asp-for="TicketPrices.ChildrenPrice" class="form-control" />
                <span asp-validation-for="TicketPrices.ChildrenPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
